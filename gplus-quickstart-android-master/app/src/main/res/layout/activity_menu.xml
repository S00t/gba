<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.google.android.gms.plus.sample.quickstart.MenuActivity">

    <TextView
        android:id="@+id/text"
        android:text="@string/menu_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        />
    <Button
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text"
        android:text="Ulubione"
        android:id="@+id/favourite_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/favourite_button"
        android:id="@+id/authors_button"
        android:text="Autorzy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/authors_button"
        android:id="@+id/titles_button"
        android:text="TytuÅ‚y"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titles_button"
        android:id="@+id/search_button"
        android:text="Szukaj"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
